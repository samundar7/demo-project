pipeline {
    agent any

    environment {
        M2_HOME = 'C:\\path\\to\\your\\maven\\installation'  // Set your Maven installation path
        PATH = "${M2_HOME}\\bin;${env.PATH}"
    }

    stages {
        stage('Initialize') {
            steps {
                bat """
                echo PATH = %M2_HOME%\\bin;%PATH%
                echo M2_HOME = %M2_HOME%
                """
            }
        }

        stage('Build') {
            steps {
                dir("C:\\path\\to\\your\\project\\workspace") {
                    bat "mvn -B -DskipTests clean package"
                }
            }
        }
    }

    post {
        always {
            junit(
                allowEmptyResults: true,
                testResults: '**/target/test-reports/*.xml'
            )
        }
    }
}
